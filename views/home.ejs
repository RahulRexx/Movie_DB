<body  class="bg-img-search bg-img">
    <!-- <p>Header added</p> navbar-fixed-top => fixed-top -->
    <nav class="navbar navbar-expand-md navbar-dark bg-dark navbar-fixed-top">
        <a href="/" class="navbar-brand">
            Movie DB
        </a>
        <!-- hamburger wala -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/movies">Home</a>
                </li>
                <% if(currentuser) {  %>
                <li class="nav-item">
                    <a class="nav-link " href="#">Hi! <%= currentuser.username %></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/watchedlist">Your Watched List</a>
                </li>
                <% } else {  %>
                <li class="nav-item ">
                    <a class="nav-link" href="/login">Login</a>
                </li>

                <li class="nav-item">
                    <a class="nav-link" href="/register">Register</a>
                </li>
                <% }  %>

                <li class="nav-item">
                    <a class="nav-link" href="/contact">Contact</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        <% if(warning && warning.length > 0) { %>
        <div class="alert alert-warning" role="alert">
            <%= warning %>
        </div>
        <% } %>
        <% if( success && success.length>0) { %>
        <div class="alert alert-success" role="alert">
            <%= success %>
        </div>
        <% } %>
        <% if( error && error.length>0) { %>
        <div class="alert alert-danger" role="alert">
            <%= error %>
        </div>
        <% } %>

    </div>

<!-- =============================================== -->
<div class="container" id="top-padding">
    <h2 style="text-align: center; margin-top: 10px;">Find your Movie here</h2>
    <div id="width-changer">
        <form action="/movies" method="POST">
            <div class="form-group">
                <label for="movie[name]">* Name of the movie</label>
                <input class="form-control" type="text" name="movie[name]" placeholder="Enter name" autofocus required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="movie[release]">Year of Release</label>
                <input class="form-control" type="text" name="movie[year]" placeholder="Year of Release" autocomplete="off" >
            </div>
            <div class="form-group">
                <label for="movie[type]">Type </label>
                <input class="form-control" type="text" name="movie[type]"  placeholder="Ex- movie,series ..."  autocomplete="off">
            </div>
            <div class="form-group">
                <button class="btn btn-md btn-primary btn-block">Search</button>
            </div>
        </form>
        <hr>
        <a href="/">Go Back!</a>
        <hr>

    </div>
</div>



